<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"/>

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Verification"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#212336"
            android:gravity="center"
            android:layout_marginTop="8dp"/>

        <!-- Mail Icon inside Circle -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_email"
                android:background="@drawable/circle_shape_lightblue"
                android:padding="20dp"/>
        </LinearLayout>

        <!-- Verification sent text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verification Code Sent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212336"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

        <!-- Sub Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We've sent a verification code to"
            android:textSize="16sp"
            android:textColor="#6B7183"
            android:gravity="center"
            android:layout_marginTop="4dp"/>

        <!-- Account email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="j***@email.com"
            android:textSize="16sp"
            android:textColor="#212336"
            android:gravity="center"
            android:layout_marginBottom="18dp"/>

        <!-- Enter code label -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter verification code"
            android:textSize="14sp"
            android:textColor="#212336"
            android:layout_marginBottom="6dp"/>

        <!-- Verification code input -->
        <EditText
            android:id="@+id/verification_code"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:hint="Verification code"
            android:background="@drawable/rounded_edittext"
            android:padding="16dp"
            android:textColor="#212336"
            android:textSize="18sp"
            android:inputType="number"
            android:layout_marginBottom="8dp"/>

        <!-- Expiry & Timer -->
        <TextView
            android:id="@+id/code_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Code expires in: 4:59"
            android:textSize="14sp"
            android:textColor="#6B7183"
            android:gravity="center"
            android:layout_marginBottom="18dp"/>

        <!-- Verify Code Button -->
        <Button
            android:id="@+id/verify_code_btn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="Verify Code"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:backgroundTint="#0076FF"
            android:layout_marginBottom="14dp"/>

        <!-- Resend Code Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Didn't receive the code?"
            android:textSize="15sp"
            android:textColor="#6B7183"
            android:gravity="center"/>
        <TextView
            android:id="@+id/resend_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resend Code"
            android:textSize="16sp"
            android:textColor="#0076FF"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Need help? -->
        <TextView
            android:id="@+id/need_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Need help?"
            android:textSize="15sp"
            android:textColor="#6B7183"
            android:gravity="center"/>

    </LinearLayout>
</ScrollView>
