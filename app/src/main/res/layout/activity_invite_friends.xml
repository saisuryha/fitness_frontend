<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/invite_friends_gradient_bg"
    tools:context=".Invite_friends">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/header_gradient_bg"
        android:paddingTop="20dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="20dp">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/back_button_bg">

                <ImageView
                    android:id="@+id/back_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_back"
                    android:contentDescription="Back"
                    android:layout_gravity="center" />

            </FrameLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Invite Friends"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_marginEnd="40dp" />

        </LinearLayout>

        <!-- Challenge Card -->
        <LinearLayout
            android:id="@+id/challenge_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/challenge_invite_card_bg"
            android:padding="20dp"
            android:layout_marginHorizontal="20dp"
            android:elevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/challenge_icon_bg">

                    <ImageView
                        android:id="@+id/challenge_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_walk"
                        android:layout_gravity="center"
                        android:contentDescription="Challenge Icon" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/challenge_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Challenge Name"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:layout_marginBottom="4dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="👥"
                            android:textSize="14sp"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/challenge_joined"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="106 friends joined"
                            android:textSize="14sp"
                            android:textColor="#6B7280" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎯"
                    android:textSize="32sp" />

            </LinearLayout>

            <!-- Challenge Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/stats_mini_bg"
                android:padding="12dp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#059669"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Days"
                        android:textSize="11sp"
                        android:textColor="#6B7280" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#E5E7EB"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10K"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2563EB"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Steps"
                        android:textSize="11sp"
                        android:textColor="#6B7280" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="#E5E7EB"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#DC2626"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goal"
                        android:textSize="11sp"
                        android:textColor="#6B7280" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:paddingTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/header_section"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Invite Section Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/invite_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invite Your Friends"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/invite_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Challenge is more fun with friends! 🎉"
                    android:textSize="14sp"
                    android:textColor="#6B7280" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👫"
                android:textSize="32sp" />

        </LinearLayout>

        <!-- Quick Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/quick_action_bg"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📱"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share Link"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/quick_action_bg"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📧"
                    android:textSize="20sp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invite All"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#374151" />

            </LinearLayout>

        </LinearLayout>

        <!-- Search Bar -->
        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/modern_search_bg"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/search_icon_bg">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_search"
                    android:layout_gravity="center"
                    android:contentDescription="Search Icon" />

            </FrameLayout>

            <EditText
                android:id="@+id/search_src_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Search friends by name..."
                android:background="@android:color/transparent"
                android:paddingHorizontal="12dp"
                android:textSize="15sp"
                android:textColor="#1F2937"
                android:textColorHint="#9CA3AF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔍"
                android:textSize="16sp"
                android:layout_marginEnd="12dp" />

        </LinearLayout>

        <!-- Selected Count -->
        <LinearLayout
            android:id="@+id/selected_count_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:background="@drawable/selected_count_bg"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/selected_count_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3 friends selected"
                android:textSize="14sp"
                android:textColor="#059669"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear All"
                android:textSize="12sp"
                android:textColor="#DC2626"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Friends List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/friends_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="20dp"
            android:clipToPadding="false"
            android:paddingBottom="12dp" />

        <!-- Bottom Action Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bottom_action_bg"
            android:padding="20dp"
            android:elevation="8dp">

            <!-- Invite Button -->
            <Button
                android:id="@+id/invite_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="🚀 Invite Selected Friends"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/invite_button_bg"
                android:layout_marginBottom="8dp"
                android:elevation="4dp" />

            <!-- Cancel Button -->
            <Button
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Maybe Later"
                android:textColor="#6B7280"
                android:textSize="14sp"
                android:background="@drawable/cancel_button_bg" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>