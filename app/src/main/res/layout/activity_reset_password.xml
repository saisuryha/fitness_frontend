<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_reset_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".ResetPasswordActivity">

    <!-- Back Arrow and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Spacer -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <!-- Lock Icon -->
    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_lock"
        android:layout_gravity="center"
        android:background="@drawable/bg_circle_light"
        android:padding="16dp" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:textColor="#000000" />

    <!-- Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please answer your security questions to\nreset your password"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:textColor="#5A5A5A" />

    <!-- Spacer -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="32dp" />

    <!-- Security Question 1 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your favorite animal?"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginBottom="6dp" />

    <EditText
        android:id="@+id/et_answer_animal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_edittext"
        android:hint="Enter your answer"
        android:padding="12dp"
        android:textColor="#000"
        android:textColorHint="#A0A0A0" />

    <!-- Spacer -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <!-- Security Question 2 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your favorite color?"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginBottom="6dp" />

    <EditText
        android:id="@+id/et_answer_color"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_edittext"
        android:hint="Enter your answer"
        android:padding="12dp"
        android:textColor="#000"
        android:textColorHint="#A0A0A0" />

    <!-- Spacer -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <!-- Verify Button -->
    <Button
        android:id="@+id/btn_verify_answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify Answers"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:backgroundTint="#1877F2"
        android:padding="12dp" />

</LinearLayout>
