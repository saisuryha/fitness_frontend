<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Back Arrow -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:layout_gravity="start"
            android:layout_marginTop="16dp" />

        <!-- Lock Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_lock"
            android:background="@drawable/bg_circle_light_blue"
            android:layout_marginTop="24dp"
            android:padding="20dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="16dp" />

        <!-- New Password -->
        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your new password"
            android:inputType="textPassword"
            android:background="@drawable/bg_edittext"
            android:drawableEnd="@drawable/ic_eye"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="24dp" />

        <!-- Confirm Password -->
        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Re-enter your new password"
            android:inputType="textPassword"
            android:background="@drawable/bg_edittext"
            android:drawableEnd="@drawable/ic_eye"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="16dp" />

        <!-- Password Requirements -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password Requirements"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginTop="24dp" />

        <!-- Requirements List -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_check"
                android:drawablePadding="8dp"
                android:text="At least 8 characters"
                android:textColor="#444"
                android:paddingVertical="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_check"
                android:drawablePadding="8dp"
                android:text="Include uppercase &amp; lowercase letters"
                android:textColor="#444"
                android:paddingVertical="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_check"
                android:drawablePadding="8dp"
                android:text="Include at least one number"
                android:textColor="#444"
                android:paddingVertical="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_check"
                android:drawablePadding="8dp"
                android:text="Include at least one special character"
                android:textColor="#444"
                android:paddingVertical="4dp" />
        </LinearLayout>

        <!-- Reset Password Button -->
        <Button
            android:id="@+id/btn_reset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Reset Password"
            android:textColor="#fff"
            android:textStyle="bold"
            android:backgroundTint="#0066FF"
            android:layout_marginTop="24dp" />

        <!-- Help Link -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need help? Contact Support"
            android:textColor="#0066FF"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
