<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="24dp">

    <!-- Back arrow (You can use an ImageView or MaterialIcon) -->
    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="16dp"
        android:layout_gravity="start"/>

    <!-- Profile/Challenge image -->
    <ImageView
        android:id="@+id/forgot_password_img"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:src="@drawable/fitness_img"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_shape"/>

    <!-- Heading -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#212336"
        android:gravity="center"
        android:layout_marginTop="32dp" />

    <!-- Subheading/Instruction -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your email address to reset your password"
        android:textSize="16sp"
        android:textColor="#6B7183"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"/>

    <!-- Email Input Field -->
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:hint="Email address"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="12dp"
        android:padding="16dp"
        android:inputType="textEmailAddress"
        android:textColor="#212336"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"/>

    <!-- Continue Button -->
    <Button
        android:id="@+id/continue_btn"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="Continue"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#5F43FB"
        android:layout_marginBottom="24dp"/>

    <!-- Return to Login Text -->
    <TextView
        android:id="@+id/return_to_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return to Login"
        android:textSize="16sp"
        android:textColor="#5F43FB"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

</LinearLayout>
