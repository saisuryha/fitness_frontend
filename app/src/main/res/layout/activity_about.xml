<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                android:layout_gravity="start" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="About"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center" />

            <View
                android:layout_width="24dp"
                android:layout_height="24dp" /> <!-- Empty placeholder for symmetry -->
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="20dp" />

        <!-- App Icon -->
        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_app_logo"
            android:layout_marginBottom="10dp"
            android:contentDescription="App Icon" />

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FitChallenge"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Version -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0"
            android:textColor="#757575"
            android:textSize="14sp"
            android:layout_marginBottom="20dp" />

        <!-- About Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to FitChallenge, where fitness meets friendship. Our app transforms your daily workout routine into an exciting social experience, allowing you to challenge friends and stay motivated together on your fitness journey.\n\nTrack your progress, create custom challenges, and compete with friends in various fitness activities. Whether it's running, cycling, or workout streaks, FitChallenge makes staying fit more engaging and fun than ever.\n\nOur innovative social features let you share achievements, cheer on friends, and build a supportive community. Connect with like-minded fitness enthusiasts and turn your personal goals into shared victories.\n\nWith real-time updates, personalized challenges, and friendly competition, FitChallenge helps you stay committed to your fitness goals while building lasting connections with friends who share your passion for healthy living."
            android:textColor="#444"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>
</ScrollView>
